<div class="row player-tile">
  <div class="col-xs-12">
    {{#if song}}
      {{play-icon song=(readonly song) classNames="pull-left play-button"}}
      <img src={{song.album.coverUrl}} class="cover-image pull-left img-rounded" alt="{{song.album.title}} cover">
      <p>
        <strong>{{song.title}}</strong>
        {{song.album.title}}
      </p>
    {{else}}
      <i class="fa fa-play-circle no-song pull-left"></i>
      <p class="no-song">
        Select a song
      </p>
    {{/if}}
  </div>
</div>
